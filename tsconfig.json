{
  "compilerOptions": {
    "target": "ES2022",              // ✅
    "module": "node16",              // ✅ ganti dari "commonjs"
    "moduleResolution": "node16",    // ✅ ganti dari "bundler"
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}