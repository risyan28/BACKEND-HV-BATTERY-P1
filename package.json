{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "seed": "tsx prisma/seed.ts",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "studio": "prisma studio",
    "podman:build": "podman build -t my-be:latest .",
    "podman:save": "podman save --format oci-archive -o my-be.tar my-be:latest",
    "clean:unused": "podman image prune -f --filter dangling=true",
    "deploy:podman": "npm run build && npm run podman:build && npm run clean:unused && npm run podman:save",
    "docker:build": "docker build -t my-be:latest .",
    "docker:save": "docker save -o my-be.tar my-be:latest",
    "docker:prune": "docker image prune -f --filter dangling=true",
    "deploy:docker": "npm run build && npm run docker:build && npm run docker:prune && npm run docker:save && docker-compose up -d",
    "bundle:be": "node build-backend-bundle.js",
    "push": "git push origin main",
    "git:solo": "git add . && git diff --cached --quiet || git commit -m \"Update project\" && git pull origin main --no-rebase && git push origin main",
    "git:save": "git add . && git diff --cached --quiet || git commit -m \"save\" && git push origin main",
    "git:team": "git add . && git diff --cached --quiet || git commit -m \"Update project\" && git pull origin main --no-rebase && git push origin $(git branch --show-current)",
    "git:new": "git checkout -b"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@types/mssql": "^9.1.8",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "mssql": "^11.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "prisma": "^6.18.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
